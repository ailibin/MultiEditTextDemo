<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

    <com.aiitec.multiedittextdemo.widget.MultiInputEditText
            android:id="@+id/test_multiInputEditText"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            app:single_editText_width="40dp"
            app:editText_number="6"
            app:editText_inputType="number"
            app:editText_gravity="center"
            app:single_editText_minHeight="32dp"
            app:multiEditText_margin="38dp"

    />

</LinearLayout>